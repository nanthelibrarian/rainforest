<h1>Edit product</h1>

<%= render 'form' %>

<%= link_to 'Back', products_path %>


<p>
  <%= link_to "Back", @product %>
</p>

<%= form_for @product do |f| %>
  <p>
  <%= f.label :product %><br>
  <%= f.text_field :product %>
</p>
<p>
  <%= f.label :description %><br>
  <%= f.text_field :description %>
</p>
<p>
  <%= f.label :price %><br>
  <%= f.text_field :price_in_cents %>
</p>
<p>
<%= f.submit "Save" %>
</p>
<% end %>
